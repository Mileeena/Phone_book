@model Phone_book.Data.Models.Contact

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@Model.Name @Model.Surname</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>

<form asp-controller="Home" action="Update" method="post">
    <input type="hidden" name="_id" value="@Model.Id"/>
    <div class="form-group">
        <label for="inputName">Имя</label>
        <div class="col-sm-10">
            <input type="text" name="_name" class="form-control" id="inputName" placeholder="Имя" value="@Model.Name">
        </div>
    </div>
    <div class="form-group">
        <label for="inputSurname">Фамилия</label>
        <div class="col-sm-10">
            <input type="text" name="_surname" class="form-control" id="inputSurname" placeholder="Фамилия" value="@Model.Surname">
        </div>
    </div>
    <div class="form-group">
        <label for="inputPatronymic">Отчество</label>
        <div class="col-sm-10">
            <input type="text" name="_patronymic" class="form-control" id="inputPatronymic" placeholder="Отчество" value="@Model.Patronymic">
        </div>
    </div>
    <div class="form-group">
        <label for="inputPhone">Номер телефона</label>
        <div class="col-sm-10">
            <input type="text" class="input-medium bfh-phone" name="_phoneNumber"
                   id="inputPhone" data-format="+7 (ddd) ddd-dd-dd" placeholder="Номер телефона" value="@Model.PhoneNumber">
        </div>
    </div>
    <div class="form-group">
        <label for="inputTextarea">Адрес</label>
        <textarea class="form-control" name="_address" id="inputTextarea" rows="3" placeholder="Адрес">@Model.Address</textarea>
    </div>
    <div class="form-group">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Изменить</button>
        </div>
    </div>
</form>

</body>
</html>
